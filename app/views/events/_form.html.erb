<%= form_for(@event, html: {class: 'form-horizontal'} ) do |f| %>
  <% if @event.errors.any? %>
    <div class="alert alert-danger" role="alert">
      <h4><%= pluralize(@event.errors.count, "error") %> prohibited this event from being saved:</h4>

      <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="field form-group">
    <%= f.label :details, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :details, autofocus: true, class:"form-control" %>
    </div>
  </div>

  <div class="field form-group">
    <%= f.label :occurs_at, class:"col-sm-2 control-label" %>
    <div class="col-sm-10">
      <%= f.text_field :occurs_at, as: :bootstrap_datetimepicker, autofocus: true, class:"form-control", id: "datetimepicker" %>
    </div>
  </div>

   <div class="actions form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <%= f.submit "Save", class: 'btn btn-primary' %> <%= link_to "Cancel", events_path, class: 'btn btn-primary' %>
    </div>  
  </div>

<% end %>
